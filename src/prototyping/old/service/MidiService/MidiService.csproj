<Project Sdk="Microsoft.NET.Sdk.Worker">

  <PropertyGroup>
    <TargetFramework>net7.0-windows10.0.20348.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>dotnet-MidiService-25DD3AF4-CC99-4447-BF4C-D995C574E734</UserSecretsId>
    <RootNamespace>Microsoft.Windows.Midi.Internal.Service</RootNamespace>
	  <OutputType>exe</OutputType>
	  <PublishSingleFile Condition="'$(Configuration)' == 'Release'">true</PublishSingleFile>
	  <RuntimeIdentifier>win-x64</RuntimeIdentifier>
	  <PlatformTarget>x64</PlatformTarget>
	  <Platforms>AnyCPU;x64</Platforms>
	  <ApplicationIcon>Service Icon.ico</ApplicationIcon>
	  <PackageIcon>Service Icon.png</PackageIcon>

	  <Version>0.1.0</Version>

	  <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\..\service-protocol-shared\Aliases.cs" Link="Global\Aliases.cs" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Service Icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\Service Icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="7.0.0-preview.6.22324.4" />
    <PackageReference Include="Microsoft.Extensions.Hosting.WindowsServices" Version="7.0.0-preview.6.22324.4" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\PublishProfiles\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\sdk-plugin\MidiDevicePlugin\MidiService.DevicePluginModel.csproj" />
    <ProjectReference Include="..\..\sdk-plugin\MidiMessageProcessorPlugin\MidiService.MessageProcessorPluginModel.csproj" />
    <ProjectReference Include="..\..\sdk-plugin\MidiPluginLoader\MidiService.PluginLoader.csproj" />
    <ProjectReference Include="..\..\service-protocol-shared\MidiServiceData\MidiService.Data.csproj" />
    <ProjectReference Include="..\..\service-protocol-shared\MidiServiceProtocol\MidiService.Protocol.csproj" />
    <ProjectReference Include="..\..\shared\config\MidiConfig.csproj" />
    <ProjectReference Include="..\..\shared\setup\MidiSetup.csproj" />
  </ItemGroup>
</Project>
